account: scott

SQL_SELECT

--1 이름이 SMITH인 사람의 월급여를 조회하시오.
SELECT sal
FROM emp
WHERE ename = 'SMITH';

--2 월급이 2000이상인 사람의 이름과 직업을 구하시오.
SELECT ename, job
FROM emp
WHERE sal>=2000;

--3 연봉이 많은 사람 기준으로 정렬하여 나타내시오.
SELECT ename, sal
FROM emp
ORDER BY sal desc;

--4 부서번호가 30번이고 급여가 2000이상인 사람만 조회하시오.
SELECT ename, sal
FROM emp
WHERE deptno=30
AND sal>=2000;

--5 부서번호가 10, 20번인 자료만 조회하시오.
SELECT ename, deptno
FROM emp
WHERE deptno=10
OR deptno=20;

--6 직업이 CLERK, SALESMAN인 사람의 이름, 직업, 연봉, 부서번호를 나타내시오.
SELECT ename, job, (sal*12), deptno
FROM emp
WHERE job = 'CLERK'
OR job = 'SALESMAN';

--7 부서번호를 정렬하여 나타내시오. (단, 부서번호가 같을 경우는 월급여가 많은 순서대로 나타내시오.)
SELECT *
FROM emp
ORDER BY deptno, sal desc;

--8 emp 테이블의 모든 자료를 조회하여 이름, 직업, 월급, 연봉을 나타내시오.
SELECT ename, job, (sal*12)
FROM emp;

--9 연봉의 0.33%는 세금이다. 이름, 직업, 연봉, 세금, 실수령액을 나타내시오.
SELECT ename, job, (sal*12) 연봉,(sal*12*0.33) 세금, (sal*12) - (sal*12*0.33) 실수령액
FROM emp;

--10 직업이 MANAGER인 사람의 이름과 입사일을 표시하시오.
SELECT ename, hiredate
FROM emp
WHERE job = 'MANAGER';
